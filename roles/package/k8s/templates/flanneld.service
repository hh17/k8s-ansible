[Unit]
Description=Flanneld overlay address etcd agent
After=network-online.target network.target
Before=docker.service
[Service]
Type=notify
EnvironmentFile={{nodes_path}}/cfg/flanneld
ExecStart={{nodes_path}}/bin/flanneld $FLANNEL_OPTIONS
ExecStartPost={{nodes_path}}/bin/mk-docker-opts.sh -k DOCKER_NETWORK_OPTIONS -d /run/flannel/subnet.env
Restart=on-failure
 
[Install]
WantedBy=multi-user.target
